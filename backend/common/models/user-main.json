{
  "name": "UserMain",
  "plural": "UserMain",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "recordCreated": {
      "type": "date",
      "default": "$now"
    },
    "lastLoginDate": {
      "type": "date"
    },
    "birthdate": {
      "type": "date",
      "required": true
    },
    "gender": {
      "type": "string",
      "required": true
    },
    "isBanned": {
      "type": "boolean"
    },
    "isActive": {
      "type": "boolean"
    },
    "isFirstLogin": {
      "type": "boolean",
      "default": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "userDetail": {
      "type": "hasOne",
      "model": "UserDetail",
      "foreignKey": "refUserMainId"
    },
    "userRatings": {
      "type": "belongsTo",
      "model": "UserRating",
      "foreignKey": "refUserRatingId"
    },
    "userReviews": {
      "type": "belongsTo",
      "model": "UserReview",
      "foreignKey": ""
    },
    "RecipientNotifications": {
      "type": "hasMany",
      "model": "Notification",
      "foreignKey": "refRecipientUserId",
      "through": "Notification"
    },
    "SenderNotifications": {
      "type": "hasMany",
      "model": "Notification",
      "foreignKey": "refSenderUserId",
      "through": "Notification"
    },
    "inInterestedIn": {
      "type": "hasMany",
      "model": "UserProduct",
      "foreignKey": "refTouristUserId",
      "through": "UserProduct"
    },
    "owns": {
      "type": "hasMany",
      "model": "Product",
      "foreignKey": "refOwnerUserId"
    },
    "userCities": {
      "type": "hasMany",
      "model": "User_city",
      "foreignKey": "refUserId",
      "through": "User_city"
    },
    "userLanguages": {
      "type": "hasMany",
      "model": "User_Language",
      "foreignKey": "refUserId",
      "through": "User_Language"
    },
    "userUserroles": {
      "type": "hasMany",
      "model": "User_UserRole",
      "foreignKey": "refUserId",
      "through": "User_UserRole"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": [
        "login",
        "submit"
      ]
    }
  ],
  "methods": {
    "submit": {
      "accepts": [
        {
          "arg": "firstName",
          "type": "string"
        },
        {
          "arg": "lastName",
          "type": "string"
        },
        {
          "arg": "birthdate",
          "type": "date"
        },
        {
          "arg": "gender",
          "type": "string"
        },
        {
          "arg": "email",
          "type": "string"
        },
        {
          "arg": "password",
          "type": "string"
        },
        {
          "arg": "password2",
          "type": "string"
        },
        {
          "arg": "agreeToTerms",
          "type": "boolean"
        }
      ],
      "returns": [
        {
          "arg": "success",
          "type": "boolean"
        }
      ],
      "description": "Register a new user into application",
      "http": [
        {
          "path": "/submit",
          "verb": "post"
        }
      ]
    }
  }
}
